<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsPlanet1_0" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TitleTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="fontFamily">@font/aileron_semibold</item>
    </style>

    <style name="SubTitleTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/subTitleTextColor</item>
        <item name="fontFamily">@font/aileron_regular</item>
    </style>

    <style name="NormalTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/subTitleTextColor</item>
        <item name="fontFamily">@font/aileron_thin</item>
    </style>

    <style name="BackgroundColor">
        <item name="android:background">@color/lightModeBg</item>
    </style>

    <style name="cardColor">
        <item name="android:background">@color/card_color</item>
    </style>
</resources>